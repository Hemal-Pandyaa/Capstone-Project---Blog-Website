<%- include("partials/header.ejs") %>
        <div class="contactUs">
            <p class="contact">Contact US</p>
            <form action="/submit" class="form" method="POST">
                <label for="fullName"></label>
                <input type="text" placeholder="Enter Your Full Name" class="nam" name="fullName" required />
                <label for="email"></label>
                <input type="text" placeholder="Enter Your Email" class="email" name="email" required />
                <label for="message"></label>
                <textarea type="textarea" placeholder="Enter Your Message" class="message" name="message" rows="5"
                    id="message" class="textarea" required></textarea>
                <label for="submit"></label>
                <input type="submit" name="submit" id="submit" value="Submit" />
            </form>
        </div>

        <%- include("partials/footer.ejs") %>